<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/welcome"
            android:id="@+id/textView3"
            android:layout_column="1" />
    </TableRow>

    <TableRow></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_column="1"
            android:src="@drawable/ic_launcher" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:text="@string/explanation"
            android:id="@+id/textView4"
            android:layout_column="1" />
    </TableRow>

    <TableRow>
        <Space
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/mini_sausages"
            android:id="@+id/textView"
            android:textStyle="normal"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_column="2"
            android:id="@+id/imageMiniSausages"
            android:clickable="false"
            android:onClick="buySausage"
            android:src="@drawable/small_sausage"
            android:contentDescription="@string/mini_sausages"
            android:layout_weight="0" />
    </TableRow>



    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sausage_roll"
            android:id="@+id/textView2"
            android:onClick="buySausage"
            android:layout_column="1"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/imageSausageRoll"
            android:src="@drawable/sausage_roll"
            android:onClick="buySausage"
            android:contentDescription="@string/sausage_roll"
            android:entries="@string/sausage_roll"
            android:layout_column="2"
            android:layout_weight="0" />
    </TableRow>



</TableLayout>



